package:
  name: {{ target }}
  version: {{ version }}

source:
  path: .

build:
  number: {{ build_number }}
  string: {{ build_string }}
  script_env:
    - BASE_DIR

requirements:
  build:
    - {{ python_spec }}
    - boost
    - gxx_linux-64
    - rdkit>=2018.03.1
    - tbb
    - cmake
  run:
    - {{ python_spec }}
    - boost
    - rdkit>=2018.03.1
    - tbb

